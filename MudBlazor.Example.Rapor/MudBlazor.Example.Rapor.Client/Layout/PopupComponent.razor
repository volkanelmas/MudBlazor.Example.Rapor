<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Enter some text</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField T="string" @bind-Value="@this.input" Immediate="@true" />
    </DialogContent>

    <DialogActions>
        <MudButton Disabled="@string.IsNullOrWhiteSpace(this.input)"
                   OnClick="@this.OK"
                   Size="@Size.Small">
            OK
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    private string input = string.Empty;

    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = default!;

    private void OK() => this.MudDialog.Close(DialogResult.Ok(this.input));
}